@page "/notes"

<h3>Note Page</h3>

<div class="note-container">
    <textarea @bind="noteContent" @bind:event="oninput" placeholder="Type your notes here..."></textarea>
</div>

<p>Character count: @noteContent.ToCharArray().Length</p>

<style>
    .note-container {
        height: 300px; /* Adjust height as needed */
        overflow-y: auto; /* Enables vertical scrolling */
        border: 1px solid #ccc;
        padding: 10px;
    }

    textarea {
        width: 100%;
        height: 100%;
        border: none;
        resize: none; /* Disables textarea manual resize */
        outline: none;
    }
</style>

@code {
    private string noteContent = "";
}